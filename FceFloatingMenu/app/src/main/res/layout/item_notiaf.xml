<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_notaif_line"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_notaif_icon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/data_4g_p"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_notaif_center_top"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical|start"
                android:text="今日用量:  73.89M"
                android:textColor="@color/whites"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/item_notaif_center_bottom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical|start"
                android:text="本月已用:500.57GB   可用:2000GB"
                android:textColor="@color/gray1"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_notaif_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="18:56"
            android:textColor="@color/whites"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_notaif_line"
        android:background="@drawable/line"/>
</RelativeLayout>
