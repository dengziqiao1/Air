<?xml version="1.0" encoding="utf-8"?>
<com.fce.air.AirRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/air_bg">

    <RelativeLayout
        android:id="@+id/air_seekBar_line"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp">

        <com.fce.air.VerticalSeekBar
            android:id="@+id/air_seekBar"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="37dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_marginTop="55dp"
        android:layout_toEndOf="@+id/air_seekBar_line">

        <ImageView
            android:id="@+id/air_direction1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:src="@mipmap/fan3"/>

        <ImageView
            android:id="@+id/air_volume1_feet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/blowfeet2"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/air_volume1_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:src="@mipmap/blowface2"/>

    </RelativeLayout>

</com.fce.air.AirRelativeLayout>