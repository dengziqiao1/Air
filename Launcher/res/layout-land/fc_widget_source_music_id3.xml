<com.fce.ui.widget.Widget_Source_Music_Id3
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fcui="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal" >
    
   	<!-- 专辑图片 -->
   	<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8px" >
	    <ImageView
	        android:id="@+id/widget_album_bg"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	    <ImageView
	   		android:id="@+id/widget_album"
		    android:layout_width="125px"
		    android:layout_height="125px"
	   		android:layout_marginLeft="9px" 
	   		android:layout_marginTop="5px"/>
	</RelativeLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical" >
	    <!-- id3信息 -->
	    <LinearLayout
	        android:layout_width="255px"
	        android:layout_height="100px"
	        android:orientation="vertical" >
		    <!-- 歌曲 -->
		    <RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_weight="1" >
			    <TextView
	        		android:id="@+id/widget_id3_track"
	        		style="@style/widget_id3" />
		   	</RelativeLayout>
		    <!-- 专辑 -->
		    <RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_weight="1" >
			    <TextView
	        		android:id="@+id/widget_id3_album"
	        		style="@style/widget_id3" />
		   	</RelativeLayout>
		    <!-- 艺术家 -->
		    <RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_weight="1" >
			    <TextView
	        		android:id="@+id/widget_id3_artist"
	        		style="@style/widget_id3" />
		   	</RelativeLayout>
	   	</LinearLayout>

	</LinearLayout>

</com.fce.ui.widget.Widget_Source_Music_Id3>
