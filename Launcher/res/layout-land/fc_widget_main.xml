<?xml version="1.0" encoding="utf-8"?>
<com.android.launcher2.CellLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fcui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/cell_layout_top_padding"
    android:paddingBottom="@dimen/cell_layout_bottom_padding"
    fcui:cellWidth="@dimen/workspace_cell_width"
    fcui:cellHeight="@dimen/workspace_cell_height" >
    
    <RelativeLayout
        android:id="@+id/hk_widget_page"
       	android:layout_width="match_parent"
    	android:layout_height="match_parent"
	    android:paddingTop="10px" >
	    <include layout="@layout/fc_widget_navigation"
		 	android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		   	android:layout_alignParentLeft="true" />
	    
	    <include layout="@layout/fc_widget_source"
		 	android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		   	android:layout_marginLeft="210dp" />
	    
	    <include layout="@layout/fc_widget_weather"
		 	android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
	    	android:layout_alignParentRight="true" />
    </RelativeLayout>
    
</com.android.launcher2.CellLayout>
